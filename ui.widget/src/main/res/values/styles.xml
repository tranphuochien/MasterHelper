<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="alert_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/dialog_sweet_shadow</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

    <style name="dialog_blue_button" parent="Widget.AppCompat.ActionButton">
        <item name="android:textSize">@dimen/zpw_text_size_big_x</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <declare-styleable name="CompoundDrawables">
        <attr name="iconLeft" format="reference" />
        <attr name="iconTop" format="reference" />
        <attr name="iconRight" format="reference" />
        <attr name="iconBottom" format="reference" />
        <attr name="iconStart" format="reference" />
        <attr name="iconEnd" format="reference" />
    </declare-styleable>

    <declare-styleable name="FontIconDrawable">
        <attr name="iconText" format="string|reference" />
        <attr name="iconColor" format="color|reference" />
        <attr name="iconFontSize" format="dimension|reference" />
        <attr name="autoMirrored" format="boolean|reference" />
        <attr name="needMirroring" format="boolean|reference" />
    </declare-styleable>

    <declare-styleable name="FontIconView">
        <attr name="overridePressed" format="boolean|reference" />
        <attr name="pressedGlowColor" format="color|reference" />
        <attr name="pressedGlowRadius" format="dimension|reference" />
    </declare-styleable>

    <style name="alert_dialog_transparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.01</item>
    </style>
</resources>